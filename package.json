{
  "name": "@pandazy/path-alias",
  "description": "utility library for TypeScript path alias management",
  "version": "0.2.3",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "build:clean": "rm -rf dist",
    "build": "yarn tsc --build tsconfig-build.json &&  babel src --out-dir dist --extensions \".ts,.tsx\"",
    "release": "yarn test && yarn build && yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandazy/path-alias.git"
  },
  "keywords": [
    "TypeScript",
    "path-alias"
  ],
  "author": "Martin Zheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pandazy/path-alias/issues"
  },
  "homepage": "https://github.com/pandazy/path-alias#readme",
  "lint-staged": {
    "**/*.{json,css,md}": [
      "prettier --write **/*.json **/*.css **/*.md"
    ]
  },
  "dependencies": {
    "ts-jest": "29.2.5",
    "tslib": "2.8.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@babel/cli": "7.25.9",
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@pandazy/mole-config": "0.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "22.8.7",
    "babel-plugin-module-resolver": "^5.0.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "ts-lib": "^0.0.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.3"
  }
}
